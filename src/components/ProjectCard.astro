---
import { Image } from 'astro:assets';
import github from '../assets/images/github.png'
import internet from '../assets/images/internet.png'
interface Props {
	name: string;
	desc: string;
	deploy: string | null;
    gh: string;
    index: number;
}
const {name, desc, deploy, gh, index} = Astro.props;
---
<div class="project-card">
    <div class="project-name montserrat-bold">{name}</div>
    <div class="counter montserrat-alternates-bold">{index + 1}</div>
    <p class="content">{desc}</p>
    <div class="links">
        {gh ? <a href={gh} target="_blank">
            <Image src={github} alt="Github Icon" />
            <span>Github</span>
        </a> : ('')}
        {deploy ? 
         <a href={deploy} target="_blank">
            <Image src={internet} alt="Internet Icon" />
            <span>Webpage</span>
        </a> : ('')}
    </div>
</div>
<style lang="scss" scoped>
    .project-card{
        min-height: 600px;
        height: auto;
        padding: 40px;
        display: flex;
        justify-content: flex-start;
        align-items: flex-start;
        flex-direction: column;
        box-shadow: rgba(0, 0, 0, 0.16) 0px 10px 36px 0px, rgba(0, 0, 0, 0.06) 0px 0px 0px 1px;
        position: relative;
        border-radius: 1rem;
        white-space: normal;
        box-sizing: border-box;
        flex: 0 0 450px;
        background-color: #1c1f23;
        color: var(--white);

        .project-name{
            font-size: 32px;
            margin-bottom: 20px;
        }

        .content{
            width: 100%;
        }

        .counter{
            height: 75px;
            width: 75px;
            font-size: 40px;
            font-weight: bold;
            padding: 20px;
            position: absolute;
            left: -10px;
            top: -40px;
            display: flex;
            justify-content: center;
            align-items: center;
            background: var(--gradient-purple-background);
            border-radius: 0.5rem;
        }


        .links{
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: auto;
            gap: 20px;

            a{
                cursor: pointer;
                display: flex;
                justify-content: center;
                flex-direction: column;
                align-items: center;
                transition: font-size 0.5s ease-out;

                img{
                    width: 75px;
                    height: auto;
                    transition: width 0.5s ease-out;
                }
            }

            a:hover{
                font-size: 24px;
                transition: font-size 0.5s ease-out;

                img{
                    width: 85px;
                    transition: width 0.5s ease-out;
                }
            }
        }
    }

    @media(max-width: 480px){
        .project-card{
            flex: 0 0 350px;
            min-height: 450px;

            .project-name{
                font-size: 20px;
            }

            .content{
                font-size: 14px;
            }
        }
    }
</style>