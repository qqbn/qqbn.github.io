<script>
    const headerBoxes = document.querySelectorAll('.header-box')!;
    const goToSection = (e: Event) => {
        const targetId = (e.target as HTMLDivElement).getAttribute('data-target')!;
        document.getElementById(targetId)?.scrollIntoView({ behavior: 'smooth' });
    }

    headerBoxes.forEach((element: any) => {
        element?.addEventListener('click', goToSection)

    });

    window.addEventListener('beforeunload', () => {
        headerBoxes.forEach((element: any) => {
            element.removeEventListener('mousedown', goToSection);
        })
    });
</script>
